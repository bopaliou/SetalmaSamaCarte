{% extends 'base.html.twig' %}

{% block title %}Proprietaire index{% endblock %}

{% block body %}
    <h1>Proprietaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>LieuNaissance</th>
                <th>DateNaissance</th>
                <th>Sexe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proprietaire in proprietaires %}
            <tr>
                <td>{{ proprietaire.id }}</td>
                <td>{{ proprietaire.nom }}</td>
                <td>{{ proprietaire.prenom }}</td>
                <td>{{ proprietaire.adresse }}</td>
                <td>{{ proprietaire.lieuNaissance }}</td>
                <td>{{ proprietaire.dateNaissance ? proprietaire.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ proprietaire.sexe }}</td>
                <td>
                    <a href="{{ path('proprietaire_show', {'id': proprietaire.id}) }}">show</a>
                    <a href="{{ path('proprietaire_edit', {'id': proprietaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('proprietaire_new') }}">Create new</a>
{% endblock %}
