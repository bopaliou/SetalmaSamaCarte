{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ document.type }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ document.numero }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/images/' ~ document.image) }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document_index') }}">retour</a>

    <a href="{{ path('document_edit', {'id': document.id}) }}">editer</a>

    {{ include('document/_delete_form.html.twig') }}
{% endblock %}
